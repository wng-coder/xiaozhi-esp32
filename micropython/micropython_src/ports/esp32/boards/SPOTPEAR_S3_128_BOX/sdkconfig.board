CONFIG_ESPTOOLPY_FLASHMODE_DIO=y
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y

# ESP32-S3R8 has 8MB integrated PSRAM - completely disable external PSRAM
# The integrated PSRAM cannot be accessed like external PSRAM
# Disable SPIRAM entirely for ESP32-S3R8 compatibility
# CONFIG_SPIRAM is not set

# USB Configuration (disable native USB, use UART)
# CONFIG_TINYUSB is not set
CONFIG_TINYUSB_CDC_ENABLED=n
CONFIG_ESP_CONSOLE_USB_CDC=n
CONFIG_ESP_CONSOLE_UART=y
CONFIG_ESP_CONSOLE_UART_NUM=0
CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200

# I2C Configuration - completely disable all I2C drivers
CONFIG_I2C_ENABLE_LEGACY_DRIVER=n
CONFIG_I2C_ENABLE=n
# Completely disable the I2C driver component
CONFIG_SOC_I2C_SUPPORTED=n

# Enable brownout detector
CONFIG_ESP_BROWNOUT_DET=y
CONFIG_ESP_BROWNOUT_DET_LVL_SEL_7=y